import sys

def openFile(filePath):
    file = open(filePath, "r")
    contents = file.read()
    print(contents)
    file.close()

    outputFilePath = filePath.replace(".asm", ".hack")
    print(outputFilePath)
    f = open(outputFilePath,"w+")
    f.write(contents)
    f.close

if __name__ == "__main__":
    asmFilePath = str(sys.argv[1])
    openFile(asmFilePath)
