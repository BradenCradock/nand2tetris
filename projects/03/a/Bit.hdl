/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
	DFF(in=w2, out=out, out=w1);
    Mux(a=w1, b=in, sel=load, out=w2);
}
